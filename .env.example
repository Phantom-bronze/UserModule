# Simple Digital Signage Backend - Environment Variables
# ========================================================
# Copy this file to .env and fill in the actual values
# NEVER commit the .env file to version control!

# Application Settings
# --------------------
# Environment: development, staging, or production
APP_ENV=development

# Application name displayed in logs and documentation
APP_NAME="Simple Digital Signage"

# Application version
APP_VERSION=1.0.0

# Debug mode: Set to False in production
DEBUG=True

# Server Configuration
# --------------------
# Host to bind the server to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Port to run the server on
PORT=8000

# Database Configuration
# ----------------------
# PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/simple_digital_signage

# Database pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Security & Authentication
# -------------------------
# Secret key for JWT token generation (MUST be random and secure in production)
# Generate using: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production

# JWT algorithm
ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration time in days
REFRESH_TOKEN_EXPIRE_DAYS=7

# Invitation token expiration time in hours
INVITATION_TOKEN_EXPIRE_HOURS=72

# Encryption key for sensitive data (Google credentials, tokens)
# Generate using: openssl rand -hex 32
ENCRYPTION_KEY=your-encryption-key-here-change-this-in-production

# Google OAuth Configuration
# --------------------------
# Google OAuth Client ID (from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Google OAuth Client Secret (from Google Cloud Console)
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth redirect URI (must match Google Cloud Console settings)
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Google OAuth scopes (comma-separated)
GOOGLE_SCOPES=openid,email,profile,https://www.googleapis.com/auth/drive.readonly

# CORS Configuration
# ------------------
# Allowed origins for CORS (comma-separated)
# In production, list only your frontend domains
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8100

# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=True

# Email Configuration (For sending invitations)
# ----------------------------------------------
# SMTP server host
SMTP_HOST=smtp.gmail.com

# SMTP server port
SMTP_PORT=587

# Use TLS for SMTP
SMTP_USE_TLS=True

# SMTP username (email address)
SMTP_USERNAME=your-email@gmail.com

# SMTP password or app password
SMTP_PASSWORD=your-smtp-password

# From email address for system emails
FROM_EMAIL=noreply@simpledigitalsignage.com

# From name for system emails
FROM_NAME="Simple Digital Signage"

# Redis Configuration (For Celery background tasks)
# --------------------------------------------------
# Redis URL for Celery broker
REDIS_URL=redis://localhost:6379/0

# File Storage Configuration
# --------------------------
# Local storage path for cached content
LOCAL_STORAGE_PATH=/var/digital-signage/content

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=500

# Allowed file extensions for images
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp

# Allowed file extensions for videos
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov,wmv,flv,webm

# Application Limits
# ------------------
# Default maximum users per company
DEFAULT_MAX_USERS_PER_COMPANY=10

# Default maximum devices per company
DEFAULT_MAX_DEVICES_PER_COMPANY=5

# Maximum devices per user
MAX_DEVICES_PER_USER=10

# Logging Configuration
# ---------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=json

# Log file path (leave empty to log to console only)
LOG_FILE_PATH=logs/app.log

# Super Admin Configuration
# -------------------------
# Initial super admin email (created on first run)
SUPER_ADMIN_EMAIL=admin@simpledigitalsignage.com

# Initial super admin name
SUPER_ADMIN_NAME=Super Administrator

# WebSocket Configuration
# -----------------------
# WebSocket ping interval in seconds
WS_PING_INTERVAL=30

# WebSocket ping timeout in seconds
WS_PING_TIMEOUT=10

# Device Configuration
# --------------------
# Device pairing code expiration time in minutes
DEVICE_CODE_EXPIRE_MINUTES=15

# Device offline timeout in minutes (mark as offline if no heartbeat)
DEVICE_OFFLINE_TIMEOUT_MINUTES=5

# API Rate Limiting
# -----------------
# Enable rate limiting
ENABLE_RATE_LIMITING=True

# Rate limit: requests per minute
RATE_LIMIT_PER_MINUTE=60

# Monitoring & Analytics
# ----------------------
# Enable application monitoring
ENABLE_MONITORING=False

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Feature Flags
# -------------
# Enable device remote control feature
ENABLE_REMOTE_CONTROL=True

# Enable content auto-update feature
ENABLE_AUTO_UPDATE=True

# Enable analytics and reporting
ENABLE_ANALYTICS=True
